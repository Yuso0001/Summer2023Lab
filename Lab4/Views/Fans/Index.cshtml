@model Lab4.Models.ViewModels.SportClubViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<br />
<p>
    <a asp-action="Create">Create New</a>
</p>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                Last Name
            </th>
            <th>
                First Name
            </th>
            <th>
                Birth Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Fans) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                <a asp-action="Index" asp-route-id="@item.Id">Select</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="EditSubscriptions" asp-route-id="@item.Id">Edit Subscriptions</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@if (Model.SportClubs != null)
{
    <h3>Subscribed to Brokers:</h3>
    <table class="table">
        <tr>
            @if (Model.SportClubs.Any())
            {
                <th>Name</th>
            }
            else
            {
                <th>Empty SportsClub Subscription Record</th>
            }
        </tr>
        @foreach (var item in Model.SportClubs)
        {
            <tr>
                <td>@item.Title</td>
            </tr>
        }
    </table>
}